        #{expertId},
      </if>
      <if test="field != null">
        #{field},
      </if>
      <if test="createdAt != null">
        #{createdAt},
      </if>
      <if test="relationId != null">
        #{relationId},
      </if>
       <if test="content != null">
        #{content},
      </if>
    </trim>
    <selectKey keyProperty="id" order="BEFORE" resultType="java.lang.String">
			select sys_guid() from dual
		</selectKey>
  </insert>
