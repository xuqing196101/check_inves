  <!-- 根据规则ID和用户ID更新参考人员考试状态 -->
  <update id="updateById" parameterType="ses.model.ems.ExpertPaperUser">
    update T_SES_EMS_EXPERT_PAPER_USER
    <set>
      <if test="isDo != null">
        IS_DO = #{isDo},
      </if>
      <if test="isPass != null">
        IS_PASS = #{isPass},
      </if>
    </set>
    where USER_ID = #{userId}
    AND RULE_ID = #{ruleId}
  </update>
  
  <!-- 查出所有的规则的参考人员 -->
  <select id="findAll" parameterType="java.util.Map" resultType="ses.model.ems.ExpertPaperUser">
  	SELECT
  		E.ID AS id,
		U.ID AS userId,
		U.REL_NAME AS relName,
		E.USER_TYPE AS userType,
		E.RULE_ID AS ruleId,
		E.ID_NUMBER AS idNumber
	FROM
		T_SES_EMS_EXPERT_PAPER_USER E
	LEFT JOIN T_SES_BMS_USER U ON E.USER_ID = U.ID
	WHERE 1=1
  	<if test="ruleId != null and ruleId != ''">
        AND E.RULE_ID = #{ruleId}
    </if>
    <if test="userId != null and userId != ''">
        AND U.ID = #{userId}
    </if>
    <if test="year != null and year != ''">
        AND E.YEAR = #{year}
    </if>
  </select>
  
  <!-- 查看未参考的人员 -->
  <select id="findNoTest" parameterType="java.lang.String" resultType="ses.model.ems.ExpertPaperUser">
