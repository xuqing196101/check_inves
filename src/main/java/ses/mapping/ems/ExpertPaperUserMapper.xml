  <!-- 根据主键ID更新考卷 -->
  <update id="updateByPrimaryKeySelective" parameterType="ses.model.ems.ExpertPaperUser">
    update T_SES_EMS_EXPERT_PAPER_USER
    <set>
      <if test="userId != null">
        USER_ID = #{userId},
