        #{updatedAt},
      </if>
      <if test="content != null">
        #{content},
      </if>
      <if test="range != null">
        #{range},
      </if>
      <if test="isDeleted != null">
        #{isDeleted},
      </if>
      <if test="reason != null">
        #{reason},
      </if>
    </trim>
  </insert>
  
  <!-- 修改 -->
  <update id="update" parameterType="ses.model.bms.Article">
    update T_SES_BMS_ARTICLE
    <set>
      <if test="name != null">
        NAME = #{name},
      </if>
      <if test="articleType != null">
