<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ses.dao.bms.ArticleMapper">
  <resultMap id="ArticleMapper" type="ses.model.bms.Article">
    <id column="ID" property="id" />
    <result column="NAME" property="name" />
    <result column="PUBLISHED_AT" jdbcType="TIMESTAMP" property="publishedAt" />
    <result column="IS_PIC_SHOW" property="isPicShow" />
    <result column="POSITION" property="position" />
    <result column="SHOW_COUNT" property="showCount" />
    <result column="DOWNLOAD_COUNT" property="downloadCount"/>
    <result column="STATUS" property="status" />
    <result column="PIC" property="pic" />
    <result column="PUBLISHED_NAME" property="publishedName" />
    <result column="IS_INDEX" property="isIndex" />
    <result column="TYPE" property="type" />
    <result column="PROJECT_ID" property="projectId" />
    <result column="CREATED_AT" jdbcType="TIMESTAMP" property="createdAt" />
    <result column="UPDATED_AT" jdbcType="TIMESTAMP" property="updatedAt" />
    <result column="RANGE" property="range" />
    <result column="IS_DELETED" property="isDeleted" />
    <result column="REASON" property="reason" />
    <association property="user" column="USER_ID" select="ses.dao.bms.UserMapper.queryById"/>
    <association property="articleType" column="ARTICLE_TYPE_ID" select="iss.dao.article.ArticleTypeMapper.selectByPrimaryKey"/>
  </resultMap> 
  
  <resultMap extends="ArticleMapper" id="ArticleBlob" type="ses.model.bms.Article">
    <result column="CONTENT" jdbcType="CLOB" property="content"/>
  </resultMap>
  
  <resultMap extends="ArticleBlob" type="ses.model.bms.Article" id="ArticleWithAttach">
  	<collection property="articleAttachments" ofType="ses.model.bms.ArticleAttachments"/>
  </resultMap>
  
  <sql id="Article_Column_List">
    ID, NAME, ARTICLE_TYPE_ID, PUBLISHED_AT, IS_PIC_SHOW, POSITION, USER_ID, SHOW_COUNT, DOWNLOAD_COUNT,
    STATUS, PIC, PUBLISHED_NAME, IS_INDEX, TYPE, PROJECT_ID, CREATED_AT, UPDATED_AT,RANGE,IS_DELETED,REASON
  </sql>
  
  <sql id="Article_BlOB_Column_List">
    CONTENT
  </sql>
  
  <!-- 根据ID查询 -->
  <select id="selectById" parameterType="Object" resultMap="ArticleWithAttach">
    select 
    <include refid="Article_Column_List" />
    ,
    <include refid="Article_BlOB_Column_List" />
    from T_SES_BMS_ARTICLE
    where ID = #{id}
  </select>
  
  <!-- 查询全部 -->
  <select id="selectAllArticle" resultMap="ArticleWithAttach">
  	select
  	<include refid="Article_Column_List"/>
  	,
    <include refid="Article_BlOB_Column_List" />
    from T_SES_BMS_ARTICLE
    where IS_DELETED = 0
    order by UPDATED_AT DESC
  </select>
  
  <!-- 查询附件 -->
  <select id="selectByFile" resultMap="ArticleWithAttach">
  	select 
    <include refid="Article_Column_List" />
    ,
    <include refid="Article_BlOB_Column_List" />
    from T_SES_BMS_ARTICLE
    where ID = #{id}
  </select>
  
  <!-- 根据条件查询列表 -->
  <select id="selectArticleByStatus" resultMap="ArticleBlob">
  	select
  	<include refid="Article_Column_List"/>
  	,
    <include refid="Article_BlOB_Column_List" />
    from T_SES_BMS_ARTICLE
    where IS_DELETED = 0
	  	<if test="status != null">
	  	  AND STATUS = #{status}
	  	</if>
    order by UPDATED_AT DESC
  </select>
  
  <!-- 查询所有位索引的信息 -->
  <select id="selectByIsIndex" resultMap="ArticleBlob">
  	select
  	<include refid="Article_Column_List"/>
  	,
    <include refid="Article_BlOB_Column_List" />
    from T_SES_BMS_ARTICLE
    where IS_DELETED = 0
    and IS_INDEX = 0
  </select>
  
  <!-- 校验信息标题-->
  <select id="checkName" parameterType="Object" resultMap="ArticleMapper">
  	select NAME
  	where NAME = #{name}
	  	<if test="id != null">
	  	  AND ID = #{id}
	  	</if>
  </select>
  
  
  <!-- 根据ID删除 -->
  <delete id="deleteByPrimaryKey" parameterType="Object">
    delete from T_SES_BMS_ARTICLE
    where ID = #{id}
  </delete>
  
  <!-- 假删除 -->
  <update id="Isdelete"  parameterType="Object">
  	update T_SES_BMS_ARTICLE
  	set IS_DELETED = 1
  	where ID = #{id}
  </update>
  
  <!-- 新增信息 -->
  <insert id="insertSelective" parameterType="ses.model.bms.Article">
 	<selectKey keyProperty="id" resultType="String" order="BEFORE">
        select sys_guid() from dual
    </selectKey>
    insert into T_SES_BMS_ARTICLE
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        ID,
      </if>
      <if test="name != null">
        NAME,
      </if>
      <if test="articleType != null">
        ARTICLE_TYPE_ID,
      </if>
      <if test="publishedAt != null">
        PUBLISHED_AT,
      </if>
      <if test="isPicShow != null">
        IS_PIC_SHOW,
      </if>
      <if test="position != null">
        POSITION,
      </if>
      <if test="user != null">
        USER_ID,
      </if>
      <if test="showCount != null">
        SHOW_COUNT,
      </if>
      <if test="downloadCount != null">
        DOWNLOAD_COUNT,
      </if>
      <if test="status != null">
        STATUS,
      </if>
      <if test="pic != null">
        PIC,
      </if>
      <if test="publishedName != null">
        PUBLISHED_NAME,
      </if>
      <if test="isIndex != null">
