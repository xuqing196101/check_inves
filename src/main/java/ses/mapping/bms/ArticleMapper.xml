      </if>
      <if test="createdAt != null">
        CREATED_AT,
      </if>
      <if test="updatedAt != null">
        UPDATED_AT,
      </if>
      <if test="content != null">
        CONTENT,
      </if>
      <if test="range != null">
        RANGE,
      </if>
      <if test="isDeleted != null">
        IS_DELETED,
      </if>
      <if test="reason != null">
        REASON,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id},
      </if>
      <if test="name != null">
        #{name},
      </if>
      <if test="articleType != null">
        #{articleType.id},
      </if>
      <if test="publishedAt != null">
        #{publishedAt},
      </if>
