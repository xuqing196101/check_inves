  <select id="selectByParentIdSum" parameterType="java.lang.String" resultMap="SpecialCostMap">
    select sum(PROPORTION_PRICE) as PROPORTION_PRICE,sum(APPROVED_MONEY) as APPROVED_MONEY from T_BSS_SSTPS_SPECIAL_COST where PARENT_ID !='0' and PRODUCT_ID=#{id}
  </select>
  <select id="selectByIdAndParentId" parameterType="java.lang.String" resultMap="SpecialCostMap">
    select 
    <include refid="Base_Column_List" />
    from T_BSS_SSTPS_SPECIAL_COST 
    where PARENT_ID = (select PARENT_ID from T_BSS_SSTPS_SPECIAL_COST where id=#{id})
  </select>
  
  <!-- 查询产品对应的列表信息 -->
  <select id="selectProduct" parameterType="Object" flushCache="true" resultMap="SpecialCostMap">
    select 
    <include refid="Base_Column_List" />
  	 from T_BSS_SSTPS_SPECIAL_COST
    where PRODUCT_ID = #{contractProduct.id}
    ORDER BY
	DECODE (
		LENGTH (SERIAL_NUMBER),
		1,
		TO_NUMBER (
			CONCAT (SERIAL_NUMBER, '000000')
		),
		3,
		TO_NUMBER (
			CONCAT (
				REPLACE (SERIAL_NUMBER, '.', ''),
				'00000'
			)
		),
		4,
		TO_NUMBER (
			CONCAT (
				CONCAT (
					SUBSTR (
						SERIAL_NUMBER,
						0,
						INSTR (SERIAL_NUMBER, '.') - 1
					),
					'9'
				),
				CONCAT (
					SUBSTR (
						SERIAL_NUMBER,
						INSTR (SERIAL_NUMBER, '.') + 1
					),
					'000'
				)
			)
		),
		5,
		TO_NUMBER (
			CONCAT (
				CONCAT (
					REPLACE (
						SUBSTR (SERIAL_NUMBER, 0, 3),
						'.',
						''
					),
					'00'
				),
				CONCAT (
					SUBSTR (
						SERIAL_NUMBER,
						LENGTH (SERIAL_NUMBER)
					),
					'00'
				)
			)
		),
		6,
		TO_NUMBER (
			CONCAT (
				CONCAT (
					REPLACE (
						SUBSTR (SERIAL_NUMBER, 0, 3),
						'.',
						''
					),
					'00'
				),
				CONCAT (
					'9',
					SUBSTR (
						SERIAL_NUMBER,
						LENGTH (SERIAL_NUMBER) - 1
					)
				)
			)
		)
	)
  </select>
